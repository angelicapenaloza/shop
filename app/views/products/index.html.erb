<div class="container-fluid product-container">
    <div class="row product-row">
            <div class="col-sm-2 product-menu">
              <div class=" col-sm-2 product-menu-col product-menu">
                <div class="list-group products-list">
                      <button type="button" class="list-group-item list-group-item-action">Ropa</button>
                      <button type="button" class="list-group-item list-group-item-action">Mugs</button>
                      <button type="button" class="list-group-item list-group-item-action">Llaveros</button>
                      <button type="button" class="list-group-item list-group-item-action">Otros</button>
              </div>
              </div>
            </div>
            <div class="col-sm products-conteiner-card">
                  <div class="row products-rows">

                    <% @products.each do |product| %>
                          <div class="card text-center">
                                 <%= image_tag "#{product.image}" %>
                                 <div class="card-body">
                                   <h5 class="card-title"><%= product.nombre%></h5>
                                   <p class="card-text"> <%= product.description%></p>
                                   <p class="card-text"> <%= product.precio%></p>
                                   <a href="#" class="btn btn-primary">Go somewhere</a>
                                 </div>
                         </div>
                    <%end%>


